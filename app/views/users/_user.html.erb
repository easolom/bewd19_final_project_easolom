<div class="profile">
	<h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
	<p><%= "#{@user.email}" %></p>
	<p><%= "#{@user.birthday}" %></p>
	<p><%= "#{@user.location}" %></p>
</div>
<% if current_user.id != @user.id %>
	<% if !Friendship.is_friend?(current_user.id, params[:id]) %>
		<%= form_tag("/users/friends_add", method: "post") do |f| %>
			<%= hidden_field_tag("friend_id", params[:id]) %>
			<%= submit_tag("Add Friend") %>
		<% end %>
	<% elsif Friendship.is_friend?(current_user.id, params[:id]) %>
		<%= form_tag("/users/friends_remove", method: "post") do |f| %>
			<%= hidden_field_tag("friend_id", params[:id]) %>
			<%= submit_tag("Remove Friend") %>
		<% end %>
	<% end %>
<% end %>

<div class ="statuses">
	<h3>A list of Statuses</h3>
	<% @statuses.each do |s| %>
		<div class="statuses">
			<p><%= s.status %></p>
			<p><%= s.created_at %></p>
		</div>
	<% end %>
</div>

<div class="friends">
	<% @friends.each do |friend| %>
		<div>
			<p><%= link_to "#{friend.first_name} #{friend.last_name}", user_path(friend.id) %></p>
			<p><%= "#{@user.location}" %>></p>
		</div>
	<% end %>
</div>