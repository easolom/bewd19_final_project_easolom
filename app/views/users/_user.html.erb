<div class="profile">
	<h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
	<p><%= "#{@user.email}" %></p>
	<p><%= "#{@user.birthday}" %></p>
	<p><%= "#{@user.location}" %>></p>
</div>

<div class ="statuses">
	<h3>A list of Statuses</h3>
	<% @statuses.each do |s| %>
		<div class="statuses">
			<p><%= s.status %></p>
			<p><%= s.created_at %></p>
		</div>
	<% end %>
</div>

<div class="friends">
	<% @friends.each do |friend| %>
		<div>
			<p><%= link_to "#{friend.first_name} #{friend.last_name}", users_show_path(friend.id) %></p>
			<p><%= "#{@user.location}" %>></p>
		</div>
	<% end %>
</div>