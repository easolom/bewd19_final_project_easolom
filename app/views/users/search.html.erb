<%= form_tag "/users/search", method: "GET" do |f| %>
	<%= label_tag(:search, "Search for:") %>
	<%= text_field_tag(:search, params[:search]) %>
	<%= submit_tag("Search") %>
<% end %>

<% @list.each do |user| %>
	<div class="profile">
		<h4><%= link_to "#{user.first_name} #{user.last_name}", user_path(user.id) %></h4>
		<p><%= "#{user.email}" %></p>
		<p><%= "#{user.birthday}" %></p>
		<p><%= "#{user.location}" %></p>
	</div>
	
<% end %>